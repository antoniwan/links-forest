---
import { emojiMap, type EmojiName } from '../data/emojis';
import { sizeClasses, type Size } from '../config/ui';
import { componentLogger } from '../utils/logger';

interface Props {
  name: EmojiName;
  size?: Size;
  label?: string;
}

const { name, size = 'md', label } = Astro.props;
const emoji = emojiMap[name];

componentLogger('Emoji component rendered');
---

<span 
  class={sizeClasses[size]} 
  role="img" 
  aria-label={label || name}
>
  {emoji}
</span> 