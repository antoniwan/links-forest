---
interface Props {
  theme: string;
}

const { theme } = Astro.props;

// Theme-specific gradient configurations
const themeGradients = {
  builder: {
    layers: [
      'from-stone-600/20 via-stone-700/30 to-stone-800/40',
      'from-stone-500/15 via-stone-600/25 to-stone-700/35',
      'from-stone-400/10 via-stone-500/20 to-stone-600/30'
    ]
  },
  wolf: {
    layers: [
      'from-gray-600/20 via-gray-700/30 to-gray-800/40',
      'from-gray-500/15 via-gray-600/25 to-gray-700/35',
      'from-gray-400/10 via-gray-500/20 to-gray-600/30'
    ]
  },
  mystic: {
    layers: [
      'from-purple-600/20 via-purple-700/30 to-purple-800/40',
      'from-purple-500/15 via-purple-600/25 to-purple-700/35',
      'from-purple-400/10 via-purple-500/20 to-purple-600/30'
    ]
  },
  dragon: {
    layers: [
      'from-red-600/20 via-red-700/30 to-red-800/40',
      'from-red-500/15 via-red-600/25 to-red-700/35',
      'from-red-400/10 via-red-500/20 to-red-600/30'
    ]
  },
  artist: {
    layers: [
      'from-pink-600/20 via-pink-700/30 to-pink-800/40',
      'from-pink-500/15 via-pink-600/25 to-pink-700/35',
      'from-pink-400/10 via-pink-500/20 to-pink-600/30'
    ]
  },
  warrior: {
    layers: [
      'from-slate-600/20 via-slate-700/30 to-slate-800/40',
      'from-slate-500/15 via-slate-600/25 to-slate-700/35',
      'from-slate-400/10 via-slate-500/20 to-slate-600/30'
    ]
  },
  healer: {
    layers: [
      'from-emerald-600/20 via-emerald-700/30 to-emerald-800/40',
      'from-emerald-500/15 via-emerald-600/25 to-emerald-700/35',
      'from-emerald-400/10 via-emerald-500/20 to-emerald-600/30'
    ]
  },
  alchemist: {
    layers: [
      'from-violet-600/20 via-violet-700/30 to-violet-800/40',
      'from-violet-500/15 via-violet-600/25 to-violet-700/35',
      'from-violet-400/10 via-violet-500/20 to-violet-600/30'
    ]
  },
  strategist: {
    layers: [
      'from-blue-600/20 via-blue-700/30 to-blue-800/40',
      'from-blue-500/15 via-blue-600/25 to-blue-700/35',
      'from-blue-400/10 via-blue-500/20 to-blue-600/30'
    ]
  },
  steward: {
    layers: [
      'from-green-600/20 via-green-700/30 to-green-800/40',
      'from-green-500/15 via-green-600/25 to-green-700/35',
      'from-green-400/10 via-green-500/20 to-green-600/30'
    ]
  }
};

const gradients = themeGradients[theme as keyof typeof themeGradients] || themeGradients.builder;
---

<div class="fixed inset-0 pointer-events-none z-0">
  {gradients.layers.map((gradient, index) => (
    <div
      class={`absolute inset-0 bg-gradient-to-br ${gradient} opacity-60 border-2 border-red-500`}
      style={`animation: pulse ${3 + index}s ease-in-out infinite;`}
    />
  ))}
</div>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.6;
    }
  }
</style>

{console.log('AuraLayers theme:', theme.active)}
<AuraLayers client:load theme={theme.active} /> 